<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/baseLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/backgroundOfButton"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">



            <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                android:id="@+id/toggleOnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                custom:toggleWidth="90dp"
                custom:textToggleLeft="OFF"
                custom:textToggleRight="ON" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="10dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textStyle="bold"
                android:text="Active for: x minutes"
                />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/show_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_history"
                android:textColor="@color/colorPrimaryDark"
                android:backgroundTint="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_anchor="@id/bottom_sheet"
        android:background="@drawable/shadow"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        app:behavior_hideable="false"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


        <ProgressBar
            android:id="@+id/home_progress_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"/>

        <com.example.android.scmu_epra.BottomSheetListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />




    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>