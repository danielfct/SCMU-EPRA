<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fingerprintImage"
        android:layout_width="175dp"
        android:layout_height="125dp"
        android:layout_below="@+id/paragraphLabel"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/ic_fingerprint"
        android:contentDescription="@string/authentication_description"/>

    <TextView
        android:id="@+id/paragraphLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:text="@string/authentication_description"
        android:textAlignment="center" />


</RelativeLayout>
